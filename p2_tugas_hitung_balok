#include <iostream>
using namespace std;

int main ()
{
    int panjang;
    int lebar;
    int tinggi;
    int Luas;
    int vol;

    cout << "Masukkan Panjang  : ";
    cin >> panjang;

    cout << "Masukkan Lebar    : ";
    cin >> lebar;

    cout << "Masukkan Tinggi   : ";
    cin >> tinggi;

    vol= panjang*lebar*tinggi;
    Luas= (2*panjang*lebar)+(2*panjang*tinggi)+(2*lebar*tinggi);

    cout << "Volume dan Luas Permukaan Balok"<<endl;
    cout << "Volume           : "<<vol<<endl;;
    cout << "Luas Permukaan   : "<<Luas<<endl;

    return 0;
}
